<div class="modal gallery" tabindex="-1" role="dialog">
  <ul class="thumbnails">
    {% for pic in pictures %}
      <li class="thumb">
        <a href="{{ pic.files.large }}" data-picture="{{ loop.index0 }}" aria-label="{{ 'gallery.show_picture'|trans }}">
          <img src="{{ pic.files.small }}" alt=""/>
        </a>
      </li>
    {% endfor %}
  </ul>
  
  <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'gallery.close'|trans }}">
    <span aria-hidden="true">&times;</span>
  </button>

  <figure class="viewport">
    {#
    <img src="{{ pictures[0].files.large }}" alt="{{ pic.description }}"/>
    <figcaption>{{ pictures[0].description }}</figcaption>
    #}
  </figure>
</div>
